@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
@{
}



<form method="Post">

    <input asp-for="Category.Id" hidden />

    <div class="border p-3 mt-4">

        <div class="row pb-2">

            <h2 class="primary">
                Delete Category
            </h2>

            <hr />
        </div>


        @*Validation *@
        @*<div asp-validation-summary="ModelOnly"> </div>*@


        <div class="mb-3 row">

            <label asp-for="Category.Name" class="p-0">    </label>
            <input asp-for="Category.Name" disabled type="text" class="form-control" />
            @*<span asp-validation-for="Name" class="text-danger"></span>*@

        </div>

        <div class="mb-3 row">

            <label asp-for="Category.DisplayOrder" class="p-0">   </label>
            <input asp-for="Category.DisplayOrder" disabled type="text" class="form-control" />
            @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@

        </div>

        <div class="row">

            <div class="col-6 col-md-3">

                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>

            <div class="col-6 col-md-3">

                <a asp-page="/Category/Index" class="btn btn-secondary border form-control">
                    Back to list
                </a>

            </div>
        </div>

    </div>

</form>
