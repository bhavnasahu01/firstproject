@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
}

@model List<Category>
@*Add the notification partial view it will display the msg like created succesfully and updated and deleted successfully*@
@*remove the partial view here and define the layot page it will displat the notification for all the pages*@
@*<partial name="_NotificationPartial"/>*@

<div class="container">

    <div class="row pt-4 pb-3">

        <div class="col-6">

            <h2 class="text-primary">
                CategoryList
            </h2>

        </div>

        <div class="col-6 ext-end">

            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Create New Category
            </a>

        </div>

    </div>

    <table class="table table-bordered table-striped">

        <thead>

            <tr>

                <th>
                    Category Name
                </th>

                <th>
                    Display Order
                </th>

                <th>
                    Edit
                </th>

                <th>
                    Delete
                </th>

            </tr>

        </thead>

        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {

                <tr>

                    <td>
                        @obj.Name
                    </td>

                    <td>
                        @obj.DisplayOrder
                    </td>

                    <td>

                        <div class="w-75 btn-group" role="group">

                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                        </div>

                    </td>



                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>

                        </div>
                    </td>
                </tr>


            }

        </tbody>



    </table>

</div>